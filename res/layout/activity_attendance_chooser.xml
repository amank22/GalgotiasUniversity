<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".OptionsActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/ad_unit_id"
                 />

            <Button
                android:id="@+id/attendance_todays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_blue"
                android:text="Today Attendance" />

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/ad_unit_id"
                 />

            <Button
                android:id="@+id/attendance_semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_green"
                android:text="Semester Attendance" />

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/ad_unit_id"
                 />

            <Button
                android:id="@+id/attendance_subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_red"
                android:text="Subject Wise Attendance" />

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/ad_unit_id"
                 />

            <Button
                android:id="@+id/attendance_monthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_blue"
                android:text="Monthly Attendance" />

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/ad_unit_id" 
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>