<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selectornews"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subject"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#a15c68"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_time_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/abs__toast_frame"
        android:gravity="center"
        android:text="(P1) 09:15 AM-10:05 AM"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/textView_class_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/abs__toast_frame"
            android:gravity="center"
            android:text="theory"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/abs__toast_frame"
            android:gravity="center"
            android:text="NM"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:textSize="26sp" />
    </LinearLayout>

</LinearLayout>